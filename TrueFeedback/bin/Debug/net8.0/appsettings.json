{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "TrueFeedbackAPI",
    "Audience": "TrueFeedbackClient"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/truefeedback-log-.txt", "rollingInterval": "Day" }
      },
      {
        "Name" : "AzureBlobStorage",
        "Args": {
          "connectionString": "@Microsoft.KeyVault(SecretUri=https://secretstoragelegin.azure.net/secrets/BlobConnectionString/)",
          "storageContainerName": "logs",
          "storageFileName": "{yyyy}/{MM}/{dd}/log.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "AzureKeyVault": {
    "VaultUri": "https://secretstoragelegin.vault.azure.net/"
  }
}
